{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "api": ["./src/api"],
      "assets": ["./src/assets"],
      "components": ["src/components"],
      "config": ["./src/config"],
      "const": ["src/const"],
      "i18n": ["./src/i18n"],
      "navigation": ["./src/navigation"],
      "screens": ["./src/screens"],
      "store": ["./src/store"],
      "styles": ["./src/styles"],
      "utils": ["src/utils"]
    }
  },
  "include": ["index.js", "App.tsx", "src/**/*"]
}
